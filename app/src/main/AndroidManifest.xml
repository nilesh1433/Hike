<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nilesh.hike" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list" >
        </activity>
        <activity
            android:name=".AskPermission"
            android:label="@string/title_activity_ask_permission" >
        </activity>
        <activity
            android:name=".GrantPermission"
            android:label="@string/title_activity_grant_permission" >
        </activity>
        <activity
            android:name=".SendMessage"
            android:label="@string/title_activity_send_message" >
        </activity>
        <service android:name="com.example.nilesh.openfireconnect.HikeService"/>
    </application>

</manifest>
